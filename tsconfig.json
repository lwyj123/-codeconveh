{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "newLine": "LF",
    "rootDir": "src",
    "outDir": "dist",
    "plugins": []
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__mocks__/*"
  ]
}
